    <style>
        .hero-image {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("/Images/99-997597_s.jpg");
            height: 50%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }

        .hero-text {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
        }

        .hero-text button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 10px 25px;
            color: black;
            background-color: #ddd;
            text-align: center;
            cursor: pointer;
        }

        .hero-text button:hover {
            background-color: #555;
            color: white;
        }

        .user-body h3 {
            font-size: 15px;
            font-weight: 600;
        }

        .post-body {
            margin-bottom: 25px;
        }
        .post-body img {
            border-radius: 50%;
        }
        .user-body p {
            font-size: 12px;
            line-height: 1;
        }
        .post-body {
            display: flex;
            align-items: center;
        }
        .user-body {
            margin-top: 10px;
            margin-left: 10px;

        }
        .aside-head h3, .search-head h3 {
            font-size: 20px;
            font-weight: 600;
            margin-top: 35px;
            margin-bottom: 25px;
        }
        .subject-body button {
            border: 1px solid #c2bebe;
            border-radius: 20px;
            background: #aba7a7;
            color: white;
            /* height: 36px; */
            margin: 3px;
            font-weight: 600;
        }
    </style>

    <style>
        .tab {
            float: left;
            /* border: 1px solid #ccc; */
            /* background-color: #f1f1f1; */
            width: 100%;
            height: auto;
        }

            /* Style the buttons inside the tab */
            .tab button {
                display: block;
                background-color: inherit;
                color: #0e0c0c;
                padding: 22px 16px;
                width: 100%;
                border: none;
                outline: none;
                text-align: left;
                cursor: pointer;
                transition: 0.3s;
                font-size: 17px;
                border-radius: 7px;
            }

                /* Change background color of buttons on hover */
                .tab button:hover {
                    background-color: #ddd;
                }

                /* Create an active/current "tab button" class */
                .tab button.active {
                    background-color: #4a3a82;
                    box-shadow: 0 0 10px #0033ff45;
                    color: white;
                    font-weight: 600;
                }

        /* Style the tab content */
        .tabcontent {
            float: left;
            padding: 0px 12px;
            border: 1px solid #f0f0f0;
            width: 100%;
            height: auto;
            margin-bottom: 100px;
            padding-bottom: 30px;
            border-radius: 5px;
            box-shadow: 0 0 10px #c2b6ffeb;
        }


        .post-user-info img, .allpost-user img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
        }

        .user-info h1 {
            margin-left: 10px;
            font-size: 20px;
        }



        .post-user-info {
            display: flex;
            align-items: center;
            margin-right: 300px;
        }

        .Post-info {
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

        .profile-info {
            margin: 20px;
            margin-bottom: 100px;
        }


        .tuition-info {
            margin: 20px;
        }

            .tuition-info table {
                float: left;
                margin-right: 236px;
            }

            .tuition-info button {
            }

        div#createpost {
            padding: 50px;
            /* border: 1px solid #dbd9d9; */
        }


        .form-group {
            margin-bottom: 2rem;
        }

        div#createpost label {
            font-weight: 700;
        }

        .post-user-info-text p {
            font-size: 13px;
            line-height: 1;
        }

        .post-user-info-text h1 {
            font-size: 16px;
            font-weight: 600;
        }




        .post-user-info-text {
            margin-top: 20px;
            margin-right: 300px;
            margin-left: 20px;
        }

        .allpost-user {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }


        div#mypost {
            padding: 50px;
        }

        .post-box {
            margin-bottom: 30px;
            padding-bottom: 53px;
            border-bottom: 1px solid black;
        }


        .btn-primary {
            background: #4a3a82;
            border-color: #4a3a82;
            width: 80px;
        }


        a.nav-link.user-profile {
            background-color: #4a3a82;
            width: 100px;
            /* align-items: center; */
            /* height: 30px; */
            border-radius: 5px;
            padding: 10px;
        }

        .sticky-wrapper .site-navbar ul li.active a {
            color: #715c5c;
            font-weight: 700;
            text-align: center;
        }

        .sticky-wrapper.is-sticky .site-navbar .site-navigation .site-menu > li.active a {
            color: #000;
        }

        .site-navbar {
            margin-bottom: 0px;
            width: 100%;
            background-color: white;
            box-shadow: 0 0 10px #8267df59;
        }

        .w-100 {
            width: 100% !important;
            height: 620px;
            object-fit: cover;
        }
    </style>

</head>

<body>




    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close mt-3">
                <span class="icon-close2 js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div> <!-- .site-mobile-menu -->


    <div class="site-navbar-wrap">
        <div class="site-navbar site-navbar-target js-sticky-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-2">
                        <h1 class="my-0 site-logo">
                            <a href="index.html">
                                <img src="~/Images/tuitionmedia22.png" alt="Alternate Text" />
                            </a>
                        </h1>
                    </div>
                    <div class="col-10">
                        <nav class="site-navigation text-right" role="navigation">
                            <div class="container">
                                <div class="d-inline-block d-lg-none ml-md-0 mr-auto py-3">
                                    <a href="#"
                                       class="site-menu-toggle js-menu-toggle text-white">
                                        <span class="icon-menu h3"></span>
                                    </a>
                                </div>

                                <ul class="site-menu main-menu js-clone-nav d-none d-lg-block">
                                    <li class="">@Html.ActionLink("Index", "Index", "Tutor", new { @class = "nav-link" })</li>

                                    <li class="active">@Html.ActionLink("Newsfeed", "Newsfeed", "Tutor", new { @class = "nav-link" })</li>



                                    <!-- <li class="has-children">
                                        <a href="#gallery-section" class="nav-link">Gallery</a>
                                        <ul class="dropdown arrow-top">
                                            <li><a href="#" class="nav-link">Photos</a></li>
                                            <li><a href="#" class="nav-link">Videos</a></li>

                                        </ul>
                                    </li> -->
                                    <li>@Html.ActionLink("Teacher", "Teachers", "Tutor", new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("About", "aboutus", "Tutor", new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Contact", "contact", "Tutor", new { @class = "nav-link" })</li>
                                    <li style="cursor: pointer;">
                                        <a onclick="location.href='@Url.Action("Notification", "Tutor", new { @class = "nav-link onhover"})'">Notification(<span>@ViewBag.noticount</span>)</a>
                                    </li>
                                    @if (Session["user"] == null)
                                    {
                                        <li>
                                            <a href="@Url.Action("Login", "Tutor")" class="nav-link">

                                                <button class="default-btn btn-active">
                                                    Sign In
                                                </button>
                                            </a>
                                            <a href="@Url.Action("Registration", "Tutor")" class="nav-link">
                                                <button class="default-btn">
                                                    Sign Up
                                                </button>
                                            </a>
                                        </li>
                                    }
                                   else if (Session["user"] != null)
                                    {
                                        <li class="has-children">
                                            <a href="#gallery-section" class="nav-link" style="color: #4b0082; font-weight: 600;">Profile</a>
                                            <ul class="dropdown arrow-top">
                                                <li>
                                                    <a href="@Url.Action("MyProfile", "Tutor")" class="nav-link">My Profile</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("MyPost", "Tutor")" class="nav-link">My Post</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("CreatePost", "Tutor")" class="nav-link">Create Post</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("ViewRequest", "Tutor")" class="nav-link">View Request</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("Settings", "Tutor")" class="nav-link">Settings</a>
                                                </li>
                                            </ul>
                                         </li>

                                        <li>
                                            <a href="@Url.Action("Logout", "Tutor")" class="nav-link" style="border: 1px solid #4a3a82; padding: 8px; font-weight: 600; border-radius: 5px;">Log Out</a>
                                        </li>
                                    }


                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <style>
        .newsfeed-section{
            height: auto;
            padding-top:200px;
        }
    </style>





    <div class="hero-image">
        <div class="hero-text">
            <h1 style="font-size: 100px; font-weight: 700;">NewsFeed</h1>
            <p>Learn, search, hire from here</p>
            <button>Learn More</button>
        </div>
    </div>










    <section class="newsfeed-section">
        <div class="newsfeed-home">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">


                      <div id="mypost" class="tabcontent">
                            <h3 style=" font-weight: 700; font-size: 30px;">My Post</h3>
                            <p>My all post.</p>

                            @foreach (PostTable item in ViewBag.getallpost)
                            {
                                
                                
                                
                                <div class="allpost-user">
                                    <img src="/@item.postuserimage" />
                                    <div class="post-user-info-text">
                                        <h1>@item.postuserName </h1>
                                       
                                      
                                            <p>@item.PostTime</p>

                                       
                                        
                                       

                                    </div>

                                   @if (item.AppliedUserId.Equals(Session["userId"]))
                                   {
                                       <input type="submit" class="btn btn-warning" id="applied"  name="submit" value="Applied" onclick="location.href = '@Url.Action("", "", new {id = @item.Id})'"/>

                                   }
                                   else
                                   {
                                       <input type="submit" class="btn btn-primary" id="applybutton" name="submit" value="Apply" onclick="location.href='@Url.Action("ApplyButtonClick", "Tutor", new { id = @item.Id})'" />

                                   }
                                  
                                    

                                    

                                </div>
                                
                                
                                <div class="post-box">
                                    <table>
                                        <tr>
                                            <th>Salary</th>
                                            <td></td>
                                            <td>: @item.PostSalary </td>
                                        </tr>
                                        <tr>
                                            <th>Class</th>
                                            <td></td>
                                            <td>: @item.PostClass </td>
                                        </tr>
                                        <tr>
                                            <th>Institution</th>
                                            <td>&nbsp; &nbsp; &nbsp;</td>
                                            <td>: @item.PostInstitution </td>
                                        </tr>
                                        <tr>
                                            <th>Medium</th>
                                            <td></td>
                                            <td>: @item.PostMedium </td>
                                        </tr>
                                        <tr>
                                            <th>Subjects</th>
                                            <td></td>
                                            <td>: @item.PostSubject </td>
                                        </tr>
                                        

                                    </table>

                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search Teacher" aria-label="Search Teacher" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">
                                    <i class="icon-search"></i>
                                </span>
                            </div>
                        </div>
                        <div class="image-gallery">
                            <div class="aside-head">
                                <h3>Recent Registered Teacher</h3>
                            </div>
                            <div class="images">

                                @foreach (PostTable item in ViewBag.getallpost)
                                {
                                     <img src="/@item.postuserimage" alt="Alternate Text" height="80" width="80" class="py-1 px-1"/>

                                }

                         </div>
                        </div>
                        <div class="post-gallery">
                            <div class="aside-head">
                                <h3>Latest Post</h3>
                            </div>
                            <div class="post">

                                @{
                                    int i = 0; 
                                } 
                            @foreach (PostTable item in ViewBag.getallpost)
                            {
                                if (i == 5)
                                {
                                    break;
                                }
                                else
                                {
                                    <div class="post-body">
                                        <img src="/@item.postuserimage" alt="Alternate Text" height="60" width="60" class="py-1 px-1"/>
                                        <div class="user-body">
                                            <h3>@item.postuserName</h3>
                                            <p>@item.PostTime</p>
                                        </div>
                                    </div>

                                    i++;
                                }
                                
                                 
                            }


                              
                               

                            </div>
                        </div>



                        <div class="search-by-subject">
                            <div class="search-head">
                                <h3>Search By Subject</h3>
                            </div>
                            <div class="subject-body">
                                <button class="btn">Bangla</button>
                                <button class="btn">English</button>
                                <button class="btn">Social Science</button>
                                <button class="btn">Higher Math</button>
                                <button class="btn">General Math</button>
                                <button class="btn">Finance</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>





    @(Html.Partial("Footer"))







    <script src="~/Assets/js/jquery-3.6.0.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.6.0/umd/popper.min.js"></script>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.sticky/1.0.4/jquery.sticky.min.js"></script>
    <script src="~/Assets/js/main.js"></script>


    <script>
        $('.counter').counterUp({
            delay: 10,
            time: 1000
        });

        
    </script>
</body>
</html>
