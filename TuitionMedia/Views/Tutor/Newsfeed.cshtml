    Layout = null;
    Registration profile = ViewBag.profile;
    Registration MypostImage = ViewBag.MypostImage;
    PostTable posts = ViewBag.Posts;

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
