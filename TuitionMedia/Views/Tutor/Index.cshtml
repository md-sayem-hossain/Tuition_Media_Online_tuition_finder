    <style>
        .tab {
            float: left;
            /* border: 1px solid #ccc; */
            /* background-color: #f1f1f1; */
            width: 100%;
            height: auto;
        }

        /* Style the buttons inside the tab */
        .tab button {
            display: block;
            background-color: inherit;
            color: #0e0c0c;
            padding: 22px 16px;
            width: 100%;
            border: none;
            outline: none;
            text-align: left;
            cursor: pointer;
            transition: 0.3s;
            font-size: 17px;
            border-radius: 7px;
        }

        /* Change background color of buttons on hover */
        .tab button:hover {
            background-color: #ddd;
        }

        /* Create an active/current "tab button" class */
        .tab button.active {
            background-color: #4a3a82;
            box-shadow: 0 0 10px #0033ff45;
            color: white;
            font-weight: 600;
        }

        /* Style the tab content */
        .tabcontent {
            float: left;
            padding: 0px 12px;
            border: 1px solid #f0f0f0;
            width: 100%;
            height: auto;
            margin-bottom: 100px;
            padding-bottom: 30px;
            border-radius: 5px;
            box-shadow: 0 0 10px #c2b6ffeb;
        }


        .post-user-info img, .allpost-user img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
        }

        .user-info h1 {
