    <style>


        .tab {
            float: left;
            height: auto;
            /* border: 1px solid #ccc; */
            /* background-color: #f1f1f1; */
            width: 100%;
        }

            /* Style the buttons inside the tab */

            .tab button {
                background-color: inherit;
                border: none;
                border-radius: 7px;
                color: #0e0c0c;
                cursor: pointer;
                display: block;
                font-size: 17px;
                outline: none;
                padding: 22px 16px;
                text-align: left;
                transition: 0.3s;
                width: 100%;
            }

                /* Change background color of buttons on hover */

                .tab button:hover {
                    background-color: #ddd;
                }

                /* Create an active/current "tab button" class */

                .tab button.active {
                    background-color: #4a3a82;
                    box-shadow: 0 0 10px #0033ff45;
                    color: white;
                    font-weight: 600;
                }

        /* Style the tab content */

