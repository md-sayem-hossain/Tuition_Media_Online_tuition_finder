<style>
    .search-back {
        background: rgb(249 251 255);
        border-radius: 3px;
        box-shadow: 0 0 10px #bcc5e0a3;
        height: auto;
        padding-bottom: 6%;
        padding-top: 6%;
        width: 100%;
    }

    .search-bar {
        margin-bottom: 8%;
        margin-top: -14%;
    }

    .search-box input { margin-right: 10px; }

    .search-box input[type=text] {
        border: none;
        border: 1px solid #b7b7b7;
        border-radius: 3px;
        font-size: 2vh;
        font-weight: 300;
        height: 50px;
        padding: 10px;
        width: 20%;
    }

    .search-box input[type=button] {
        background: none;
        background: #673ab7;
        border: none;
        color: white;
        font-size: 2vh;
        font-weight: 600;
        height: 50px;
        margin-left: 2%;
        width: 20%;
    }

    .search-bar { text-align: center; }
</style>

<section class="search-bar">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="search-back">

                    <div class="search-box">
                        <input type="text" id="searchbyname" placeholder="Teacher Name">
                        <input type="text" id="searchbysalary" placeholder="Salery Range">
                        <input type="text" id="searchbyplace" placeholder="Place">
                        <input type="button" placeholder="" value="Seach Now">
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


<section>
    <div class="container">
        <div class="row">

            <div class="col-md-12">


                @if (!ViewBag.NoTeacher.Equals("found"))
                {
                    <h3>NO Teacher Found</h3>
                }
                else if (ViewBag.NoTeacher.Equals("found"))
                {
                    <table id="example" class="table table-striped table-bordered" style="width: 100%">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th>Mobile</th>
                            <th>Institution</th>
                            <th>Gender</th>
                            <th>Address</th>

                        </tr>
                        </thead>
                        <tbody>
                        @foreach (Registration item in ViewBag.teacherlist)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Institution</td>
                                <td>@item.Gender</td>
                                <td>@item.Address</td>

                            </tr>
                        }

                        </tbody>
                        <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th>Mobile</th>
                            <th>Institution</th>
                            <th>Gender</th>
                            <th>Address</th>
                        </tr>
                        </tfoot>
                    </table>
                }




            </div>

        </div>

    </div>
</section>


